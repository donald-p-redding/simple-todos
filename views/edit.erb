<setion id="todos">
  <header>
    <h2><%= "Editing \"#{@list[:name]}\"" %></h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= @list[:id] %>/delete" method="post">
          <button type class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section><br>

<form action="/lists/<%= @list[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Update">
    <a href="/lists/<%= @list[:id] %>">Cancel</a>
  </fieldset>
</form>